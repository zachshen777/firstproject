<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.zach7777.firstproject.mapper.UserMapper">

    <sql id="baseColumn">
        usercode,username,password
    </sql>

    <select id="get" resultType="User" parameterType="User">
        select
            <include refid="baseColumn"/>
        from user
        <where>
            <if test="usercode != null and usercode != ''">
                usercode = #{usercode}
            </if>
            <if test="username != null and username != ''">
                username = #{username}
            </if>
            <if test="password != null and password != ''">
                password = #{password}
            </if>
        </where>
    </select>

    <insert id="add" parameterType="User">
        insert into user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="usercode != null and usercode != ''">
                usercode,
            </if>
            <if test="username != null and username != ''">
                username,
            </if>
            <if test="password != null and password != ''">
                password
            </if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="usercode != null and usercode != ''">
                #{usercode},
            </if>
            <if test="username != null and username != ''">
                #{username},
            </if>
            <if test="password != null and password != ''">
                #{password}
            </if>
        </trim>
    </insert>

    <delete id="delete" parameterType="User">
        delete from user where usercode = #{usercode}
    </delete>

    <update id="put" parameterType="User">
        update user
        <set>
            <if test="username != null and username!=''">
                username = #{username},
            </if>
            <if test="password != null and password!=''">
                password = #{password},
            </if>
        </set>
        where usercode =#{usercode}
    </update>

</mapper>